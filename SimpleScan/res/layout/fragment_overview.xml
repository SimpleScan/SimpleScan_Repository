<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/O_partialExpensesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/O_addExpenseButton"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/O_text2"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" >
        </ListView>

        <Button
            android:id="@+id/O_addExpenseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="+" />

        <TextView
            android:id="@+id/O_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="You have"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/O_remainingBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/O_text1"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:text="error"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="46dip" />

        <TextView
            android:id="@+id/O_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/O_remainingBudget"
            android:layout_centerHorizontal="true"
            android:text="remaining."
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</FrameLayout>
